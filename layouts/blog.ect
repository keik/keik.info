<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="http://yandex.st/highlightjs/8.0/styles/default.min.css">
    <link rel="stylesheet" href="/main.css">
  </head>
  <body>

    <main class="container">
      <h1><%- @title %></h1>
      <div class="date"><%- require('moment')(@date).format('YYYY/MM/DD') %></div>

      <%- @contents %>
    </main>

    <nav>
      <ul>
      <% if @previous : %>
        <li><a href="/<%- @previous.path %>"><%- @previous.title %></a></li>
      <% end %>
      <% if @next : %>
        <li><a href="/<%- @next.path %>"><%- @next.title %></a></li>
      <% end %>
      </ul>
    </nav>

  </body>
</html>
